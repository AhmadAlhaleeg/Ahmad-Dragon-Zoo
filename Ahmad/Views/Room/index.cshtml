@model List<Ahmad.Models.Room>

<h2>Rooms</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Room Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => room.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@room.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@room.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

